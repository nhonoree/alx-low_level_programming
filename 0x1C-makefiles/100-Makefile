# Compiler and flags
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

# Program name and sources
NAME = school
SRC = main.c school.c
OBJ = main.o school.o

# RM command
RM = rm -f

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c m.h
	$(CC) $(CFLAGS) -c main.c -o main.o

school.o: school.c m.h
	$(CC) $(CFLAGS) -c school.c -o school.o

clean:
	$(RM) $(OBJ)

oclean:
	$(RM) *~

fclean: clean
	$(RM) $(NAME)

re: fclean all
