#make file

CC = gcc
SRC = main.c school.c
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

OBJ = $(SRC:.c=.o)

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ): m.h

clean:
	rm -f *~ *.swp

oclean:
	rm -f $(OBJ)

fclean: clean oclean
	rm -f $(NAME)

re: fclean all
